{
    "name": "base_config",
    "n_gpu": 1,
    "arch": {
        "type": "FastSpeech2",
        "args": {
        }
    },
    "dataset": {
        "type": "LJSpeechDataset",
        "args": {}
    },
    "dataloader": {
        "type": "LJSpeechDataloader",
        "args":{
            "batch_size": 16,
            "batch_expand_size": 32,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 1e-3,
            "betas": [0.9, 0.98],
            "eps": 1e-9
        }
    },
    "loss": {
        "type": "FastSpeechLoss",
        "args": {}
    },
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "steps_per_epoch": 1419,
            "epochs": 100,
            "anneal_strategy": "cos",
            "max_lr": 1e-3,
            "pct_start": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        "log_step": 10,
        "grad_norm_clip": 10,
        "monitor": "min val_loss",
        "early_stop": 100,
        "visualize": "wandb",
        "wandb_project": "tts_project"
    }
}
